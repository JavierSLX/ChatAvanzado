<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.morpheus.chatavanzado.ChatActivity"
    android:padding="16dp"
    android:background="#2ED3E2">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Chat Avanzado"
            android:textColor="@android:color/white"
            android:textStyle="bold"
            android:textSize="26sp"
            android:layout_gravity="center"
            android:layout_marginBottom="10dp"/>

        <EditText
            android:id="@+id/edtUsuario"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Usuario"
            android:textColorHint="@android:color/white"
            android:drawableLeft="@drawable/ic_action_user"
            android:textColor="@android:color/white"/>

        <EditText
            android:id="@+id/edtContraseña"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Contraseña"
            android:textColorHint="@android:color/white"
            android:drawableLeft="@drawable/ic_action_lock_open"
            android:textColor="@android:color/white"
            android:inputType="textPassword"/>

        <Button
            android:id="@+id/btIngresar"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:text="Ingresar"
            android:layout_marginTop="10dp"
            android:theme="@style/BotonColor"
            android:textColor="@android:color/white"
            android:drawableLeft="@drawable/ic_action_key"/>
    </LinearLayout>

</RelativeLayout>
